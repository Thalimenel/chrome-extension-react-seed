{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "0.0.1",
    "description": "A plain text description",
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "16": "icons/16.png"
    },
    "action": {
        "default_icon": {
            "128": "icons/128.png",
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "My extension"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "background/background.js"
        ]
    }
}